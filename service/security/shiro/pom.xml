        <dependency>
            <!-- Apache shiro security framework -->
            <groupId>org.apache.shiro</groupId>
            <artifactId>shiro-core</artifactId>
            <version>${shiro.version}</version>
        </dependency>
	    <dependency>
	        <groupId>org.springframework.security</groupId>
