<MetaData xmlns="http://www.osgi.org/xmlns/metatype/v1.2.0" localization="en_us">
    <OCD id="org.eclipse.kapua.service.tag.TagService"
         name="TagService" 
         description="This is the configuration for the kapua TagService. ">
        
        <Icon resource="OSGI-INF/tag-service.png" size="32"/>

		<AD id="infiniteChildEntities"
            name="infiniteChildTags"
            type="Boolean"
            cardinality="0"
            required="true"
            default="false"
            description="Whether to allow infinite tags for this account.">
        </AD>

        <AD id="maxNumberChildEntities"  
            name="maxNumberChildTags"
            type="Integer"
            cardinality="0" 
            required="true"
            default="0" 
            min="0"
            description="Maximum number of tags that are allowed to be created for this account.">
        </AD>
        
    </OCD>
    
    <Designate pid="org.eclipse.kapua.service.tag.TagService">
        <Object ocdref="org.eclipse.kapua.service.tag.TagService"/>
    </Designate>
</MetaData>
