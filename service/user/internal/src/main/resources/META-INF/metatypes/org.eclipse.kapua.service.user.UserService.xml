<MetaData xmlns="http://www.osgi.org/xmlns/metatype/v1.2.0" localization="en_us">
    <OCD id="org.eclipse.kapua.service.user.UserService"
         name="UserService" 
         description="This is the configuration for the kapua UserService. ">
        
        <Icon resource="OSGI-INF/user-service.png" size="32"/>

		<AD id="infiniteChildEntities"
            name="infiniteChildEntities"
            type="Boolean"
            cardinality="0"
            required="true"
            default="false"
            description="Whether to allow infinite users for this account.">
        </AD>

        <AD id="maxNumberChildEntities"  
            name="maxNumberChildEntities"
            type="Integer"
            cardinality="0" 
            required="true"
            default="0" 
            min="0"
            description="Maximum number of users that are allowed to be created for this account.">
        </AD>
        
        <AD id="lockoutPolicy.enabled"  
            name="lockoutPolicy.enabled"
            type="Boolean"
            cardinality="0" 
            required="true"
            default="true" 
            description="User lockout policy enable.">
        </AD>
        
        <AD id="lockoutPolicy.maxFailures"  
            name="lockoutPolicy.maxFailures"
            type="Integer"
            cardinality="0" 
            required="true"
            default="3" 
            min="0"
            description="Number of consecutive login failures before the user gets locked. Valid if lockout poilcy is enabled."/>
        
        <AD id="lockoutPolicy.resetAfter"  
            name="lockoutPolicy.resetAfter"
            type="Integer"
            cardinality="0" 
            required="true"
            default="3600" 
            min="0"
            description="The amount of time in seconds required after the last login failure to automatically reset the failure counter."/>
    
        <AD id="lockoutPolicy.lockDuration"  
            name="lockoutPolicy.lockDuration"
            type="Integer"
            cardinality="0" 
            required="true"
            default="10800"
            min="0" 
            description="For a locked user the amount of time in seconds required after the last login failure to automatically unlock the user."/>
    </OCD>
    
    <Designate pid="org.eclipse.kapua.service.user.UserService">
        <Object ocdref="org.eclipse.kapua.service.user.UserService"/>
    </Designate>
</MetaData>
