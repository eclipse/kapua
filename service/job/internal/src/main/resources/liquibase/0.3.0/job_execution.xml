<databaseChangeLog
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
                            http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.0.xsd"

        logicalFilePath="KapuaDB/changelog-job-0.3.0.xml">

    <include relativeToChangelogFile="true" file="../common-properties.xml"/>

    <changeSet id="changelog-job-execution-0.3.0_createTable" author="eurotech">
        <createTable tableName="job_job_execution">
            <column name="scope_id" type="bigint(21) unsigned"/>
            <column name="id" type="bigint(21) unsigned">
                <constraints nullable="false" primaryKey="true"/>
            </column>

            <column name="created_on" type="timestamp(3)" defaultValueComputed="${now}"/>
            <column name="created_by" type="bigint(21) unsigned">
                <constraints nullable="false"/>
            </column>
            <column name="modified_on" type="timestamp(3)" defaultValueComputed="${now}">
                <constraints nullable="false"/>
            </column>
            <column name="modified_by" type="bigint(21) unsigned">
                <constraints nullable="false"/>
            </column>

            <column name="job_id" type="bigint(21) unsigned">
                <constraints nullable="false"/>
            </column>
            <column name="started_on" type="timestamp(3)" defaultValueComputed="${now}">
                <constraints nullable="false"/>
            </column>
            <column name="ended_on" type="timestamp(3)" defaultValueComputed="${now}"/>

            <column name="optlock" type="int unsigned"/>
            <column name="attributes" type="text"/>
            <column name="properties" type="text"/>
        </createTable>

        <sql dbms="h2">ALTER TABLE job_job_execution ADD CHECK scope_id >= 0;</sql>
        <sql dbms="h2">ALTER TABLE job_job_execution ADD CHECK id >= 0;</sql>
        <sql dbms="h2">ALTER TABLE job_job_execution ADD CHECK created_by >= 0;</sql>
        <sql dbms="h2">ALTER TABLE job_job_execution ADD CHECK modified_by >= 0;</sql>
        <sql dbms="h2">ALTER TABLE job_job_execution ADD CHECK job_id >= 0;</sql>

        <addForeignKeyConstraint constraintName="fk_job_job_execution_job_id"
                                 baseTableName="job_job_execution"
                                 baseColumnNames="job_id"
                                 referencedTableName="job_job"
                                 referencedColumnNames="id"
                                 onDelete="CASCADE"/>

        <createIndex tableName="job_job_execution" indexName="idx_job_job_execution_scope_id">
            <column name="scope_id"/>
        </createIndex>

        <rollback>
            <dropIndex tableName="job_job_execution" indexName="idx_job_job_execution_scope_id"/>
            <dropTable tableName="job_job_execution"/>
        </rollback>
    </changeSet>
</databaseChangeLog>
