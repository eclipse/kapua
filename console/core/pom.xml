    <build>
        <plugins>
            <plugin>
                <!-- GWT Maven Plugin -->
                <groupId>org.codehaus.mojo</groupId>
                <artifactId>gwt-maven-plugin</artifactId>
                <executions>
                    <execution>
                        <goals>
                            <goal>generateAsync</goal> <!-- Generate Async RPC interfaces -->
                            <goal>i18n</goal> <!-- Generate internationalization files -->
                        </goals>
                    </execution>
                </executions>

                <configuration>
                    <module>org.eclipse.kapua.app.console.core.adminCore</module>
                    <i18nMessagesBundles>
                        <i18nMessagesBundle>org.eclipse.kapua.app.console.core.client.messages.ConsoleCoreMessages</i18nMessagesBundle>
                    </i18nMessagesBundles>
                </configuration>
            </plugin>
        </plugins>
    </build>

